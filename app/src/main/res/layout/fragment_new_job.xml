<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress_bar_fragment_new_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_spacing_extra_large"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_name_fragment_new_job"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_spacing_small"
            android:layout_marginTop="@dimen/common_spacing_large"
            android:layout_marginEnd="@dimen/common_spacing_small"
            android:gravity="start|top"
            android:hint="@string/text_job_name"
            android:inputType="text"
            android:padding="@dimen/common_spacing_medium"
            app:boxStrokeColor="@color/orange_500"
            app:hintTextColor="@color/orange_500"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_name_fragment_new_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                tools:text="@tools:sample/lorem[3]" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_position_fragment_new_job"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_spacing_small"
            android:layout_marginEnd="@dimen/common_spacing_small"
            android:focusable="false"
            android:gravity="start|top"
            android:hint="@string/text_job_position"
            android:inputType="text"
            android:padding="@dimen/common_spacing_medium"
            app:boxStrokeColor="@color/orange_500"
            app:hintTextColor="@color/orange_500"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_position_fragment_new_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                tools:text="@tools:sample/lorem[0]" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_start_fragment_new_job"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_spacing_small"
            android:layout_marginEnd="@dimen/common_spacing_small"
            android:focusable="false"
            android:gravity="start|top"
            android:hint="@string/text_job_start"
            android:padding="@dimen/common_spacing_medium"
            app:boxStrokeColor="@color/orange_500"
            app:hintTextColor="@color/orange_500"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_start_fragment_new_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                tools:text="@tools:sample/date/ddmmyy" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_finish_fragment_new_job"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_spacing_small"
            android:layout_marginEnd="@dimen/common_spacing_small"
            android:focusable="false"
            android:gravity="start|top"
            android:hint="@string/text_job_finish"
            android:padding="@dimen/common_spacing_medium"
            app:boxStrokeColor="@color/orange_500"
            app:hintTextColor="@color/orange_500"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_finish_fragment_new_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                tools:text="@tools:sample/date/ddmmyy" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_link_fragment_new_job"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_spacing_small"
            android:layout_marginEnd="@dimen/common_spacing_small"
            android:focusable="false"
            android:gravity="start|top"
            android:hint="@string/text_job_link"
            android:inputType="text|textWebEditText"
            android:padding="@dimen/common_spacing_medium"
            app:boxStrokeColor="@color/orange_500"
            app:hintTextColor="@color/orange_500"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_link_fragment_new_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                tools:text="@tools:sample/cities" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_save_fragment_new_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/common_spacing_large"
            android:text="@string/save"
            android:textAllCaps="false"
            app:cornerRadius="@dimen/button_corner_radius" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>